{
    "name": "Redux OS",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        // Configure properties specific to VS Code.
        "vscode": {
            "settings": {},
            "extensions": [
                "ms-python.python",
                "matklad.rust-analyzer",
                "arthurwang.vsc-prolog",
                "ms-vscode.cpptools"
            ]
        }
    },
    "runArgs": [
        "--gpus=all"
    ],
    "postCreateCommand": "pip3 install -r requirements.txt"
}


